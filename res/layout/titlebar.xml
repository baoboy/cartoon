<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_layout"
    android:layout_width="fill_parent"
    android:layout_height="45.0dip"
    android:background="@drawable/bg_titlebar" >

    <Button
        android:id="@+id/btn_left"
        android:layout_width="32.0dip"
        android:layout_height="32.0dip"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10.0dip"
        android:background="@drawable/btn_search_selector"
        android:textColor="#ffffffff"
        android:visibility="visible" />

    <TextView
        android:id="@+id/title_center_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:clickable="true"
        android:ellipsize="end"
        android:maxWidth="150.0dip"
        android:singleLine="true"
        android:text=""
        android:textColor="#ff6C4F22"
        android:textSize="@dimen/titlebar_txtsize" />

    <Button
        android:id="@+id/btn_right"
        android:layout_width="32.0dip"
        android:layout_height="32.0dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10.0dip"
        android:background="@drawable/btn_more_selector"
        android:textColor="#ffffffff"
        android:visibility="visible" />

</RelativeLayout>