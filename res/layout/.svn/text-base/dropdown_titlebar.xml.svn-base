<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_layout"
    android:layout_width="fill_parent"
    android:layout_height="45.0dip"
    android:background="@drawable/bg_titlebar" >

    <Button
        android:id="@+id/btn_left"
        android:layout_width="32.0dip"
        android:layout_height="32.0dip"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10.0dip"
        android:background="@drawable/btn_search_selector"
        android:textColor="#ffffffff"
        android:visibility="visible" />

    <Button
        android:id="@+id/btn_right"
        android:layout_width="32.0dip"
        android:layout_height="32.0dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10.0dip"
        android:background="@drawable/btn_more_selector"
        android:textColor="#ffffffff"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/titlebar_title_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_toLeftOf="@id/btn_right"
        android:layout_toRightOf="@id/btn_left"
        android:paddingLeft="20dip"
        android:paddingRight="20dip" >

        <TextView
            android:id="@+id/title_center_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:clickable="true"
            android:ellipsize="end"
            android:maxWidth="150.0dip"
            android:singleLine="true"
            android:text=""
            android:textColor="#ff6C4F22"
            android:textSize="@dimen/titlebar_txtsize" />

        <ImageView
            android:layout_width="10dip"
            android:layout_height="10dip"
            android:layout_alignBottom="@id/title_center_txt"
            android:layout_centerInParent="true"
            android:layout_marginBottom="4dip"
            android:layout_toRightOf="@id/title_center_txt"
            android:src="@drawable/dropdown_arrow" />
    </RelativeLayout>

</RelativeLayout>